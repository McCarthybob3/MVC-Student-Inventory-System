@model Exercises.Models.ViewModels.StudentVM

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<div class="row">
    <div class="col-xs-12 col-sm-3">
        @Html.Partial("StudentNav")
    </div>
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            <div class="col-xs-12">
                <h3>Delete Student</h3>
                <div class="row">
                    @using (Html.BeginForm())
    {

                @Html.HiddenFor(m => m.Student.StudentId)
                <p>Are you sure that you wish to delete the Student @Html.DisplayFor(m => m.Student.FirstName) @Html.DisplayFor(m=>m.Student.LastName)?</p>
                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                @Html.ActionLink("Cancel", "List", "Student", null, new { @class = "btn btn-sm btn-info" })



}
                </div>
                </div>
            </div>
        </div>
</div>