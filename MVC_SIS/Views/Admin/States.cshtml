@model List<Exercises.Models.Data.State>
@{
    ViewBag.Title = "States";
}



<div class="row">
    <div class="col-xs-12">
        <h3>States</h3>
        @Html.ActionLink("Add State", "AddState", "Admin", null, new { @class = "btn btn-primary" })
      
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped" style="width: auto;">
            <thead>
                <tr>
                    <th>States</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var state in Model)
                {
                <tr>
                    <td>@state.StateAbbreviation</td>
                    <td>@state.StateName</td>
                    <td> @Html.ActionLink("Edit State", "EditState", "Admin", new { id = state.StateAbbreviation }, null)</td>
                    <td>
                        @using (Html.BeginForm("DeleteState", "Admin", new { id = state.StateAbbreviation }, FormMethod.Get))
    {
                    <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete @state.StateName?')"> Delete</button>
}
                    </td>
                </tr>
}
                </tbody>
            </table>
    </div>
</div>